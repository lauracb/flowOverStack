<div class="container mt-5 pt-5">
  <div class="row">
    <div class="col-sm-6 offset-3">
    <h2 class="my-3">Publicar pregunta</h2>
      <%= form_for @question do |f|%>
      <%= render 'error_messages', objeto: @question %>
        <div class="form-group">
          <%= f.text_field :title, placeholder: "Título", class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.text_area :description, placeholder:"Descripción", class: "form-control", rows:"8" %>
        </div>
        <div class="form-group">
          <%= f.submit "¡Preguntar!", class: "form-control btn btn-primary"%>
        </div>
      <% end %>
      </div>
  </div>
</div>