<div class="container mt-5 pt-5">
<%= render 'layouts/alerts' %>
  <div class="row">
    <h1 class="mt-3">Preguntas</h1>
  </div>
  <div class="row my-3 mb-5">
    <div class="col-sm-12">
      <div class="text-right">
        <%= link_to "Hacer una pregunta", new_question_path, class:"btn btn-primary text-right" %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-8 offset-2"></div>
      <table class="table">
        <tbody>
          <% @questions.each do |question| %>
          <tr>
            <td>
              <div class="text-center">
                <div class="title-index"><%= question.votes.count %></div>
                <div class="text-muted subtitle">Votos</div>
              </div>
            </td>
              <td>
                <div class="text-center">
                  <div class="title-index"><%= question.answers.count %></div>
                  <div class="text-muted subtitle">Respuestas</div>
                </div>
              <td/>
            <td class="col-sm-8">
              <div class="text-left">
                <%= link_to question.title, question_path(question.id), class:"link-question title-index" %>
                <div class="text-muted subtitle">Pregunt√≥ <%= question.user.email%> hace <%= time_ago_in_words(question.created_at) %></div>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>


