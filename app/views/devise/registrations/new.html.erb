<div class="container mt-5 pt-5">
  <div class="row">
    <div class="col-sm-6 offset-3">
      <h2 class="my-3">Registrarse</h2>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="form-group">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control", placeholder:"Email" %>
        </div>

        <div class="form-group">
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br />
          <%= f.password_field :password, autocomplete: "new-password", class:"form-control", placeholder:"ContraseÃ±a" %>
        </div>

        <div class="form-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control", placeholder:"Confirma ContraseÃ±a" %>
        </div>

        <div class="form-group">
          <%= f.submit "Registrarse", class: "form-control btn btn-primary" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>