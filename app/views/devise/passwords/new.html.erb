<div class="container mt-5 pt-5">
  <div class="row">
    <div class="col-sm-6 offset-3">
      <h2 class="my-3">¿Olvidaste tu contraseña?</h2>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="form-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class:"form-control", placeholder:"Email" %>
          </div>

          <div class="form-group">
            <%= f.submit "Enviarme las instrucciones para restaurar la contraseña", class: "form-control btn btn-primary" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
